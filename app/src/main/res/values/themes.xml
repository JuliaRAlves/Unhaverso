<resources>

    <style name="Theme.Unhaverso" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/pink_1</item>
        <item name="colorOnPrimary">@color/white_2</item>
        <item name="colorPrimaryContainer">@color/white_1</item>
        <item name="android:statusBarColor">@color/pink_2</item>
        <item name="colorSurface">@color/pink_2</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorOnSurface">@color/black_2</item>
        <item name="colorOnPrimaryContainer">@color/pink_1</item>
        <item name="colorTertiaryContainer">@color/white_1</item>
        <item name="colorOnTertiaryContainer">@color/black_2</item>
        <item name="colorSecondaryContainer">@color/pink_1</item>
        <item name="colorOnSurfaceVariant">@color/pink_1</item>
        <item name="colorOnSecondaryContainer">@color/white_2</item>
        <item name="colorOutline">@color/white_3</item>
        <item name="colorOutlineVariant">@color/white_3</item>
        <item name="toolbarStyle">@style/Toolbar</item>
        <item name="bottomNavigationStyle">@style/BottomNavigationView</item>
    </style>

    <style name="DisplayTextAppearance" parent="TextAppearance.AppCompat.Headline">
        <item name="android:fontFamily">@font/niconne</item>
    </style>

    <style name="Toolbar" parent="Widget.Material3.Toolbar">
        <item name="titleTextColor">?attr/colorPrimary</item>
        <item name="titleTextAppearance">@style/DisplayTextAppearance</item>
        <item name="android:paddingTop">32dp</item>
        <item name="android:background">?attr/colorSurface</item>
    </style>

    <style name="BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="itemActiveIndicatorStyle">@style/BottomNavigationView.ActiveIndicator</item>
    </style>

    <style name="BottomNavigationView.ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:height">40dp</item>
        <item name="android:width">40dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.Corner.Large</item>
    </style>
</resources>