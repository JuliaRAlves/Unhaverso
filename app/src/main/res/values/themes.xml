<resources>

    <style name="Theme.Unhaverso" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/pink_1</item>
        <item name="colorOnPrimary">@color/white_2</item>
        <item name="colorPrimaryContainer">@color/white_1</item>
        <item name="android:statusBarColor">@color/pink_2</item>
        <item name="colorSurface">@color/pink_2</item>
        <item name="colorOnSurface">@color/black_2</item>
        <item name="colorOnPrimaryContainer">@color/pink_1</item>
        <item name="colorTertiaryContainer">@color/white_1</item>
        <item name="colorOnTertiaryContainer">@color/black_2</item>
        <item name="colorOutline">@color/white_3</item>
        <item name="colorOutlineVariant">@color/white_3</item>
        <item name="toolbarStyle">@style/Toolbar</item>
    </style>

    <style name="DisplayTextAppearance" parent="TextAppearance.AppCompat.Display1">
        <item name="android:fontFamily">@font/niconne</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextColor">?attr/colorPrimary</item>
        <item name="titleTextAppearance">@style/DisplayTextAppearance</item>
        <item name="android:background">?attr/colorSurface</item>
    </style>
</resources>