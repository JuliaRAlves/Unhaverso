<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Unhaverso" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_2</item>
        <item name="colorOnPrimary">@color/white_2</item>
        <item name="colorPrimaryContainer">@color/purple_2</item>
        <item name="android:statusBarColor">@color/purple_1</item>
        <item name="colorSurface">@color/purple_1</item>
        <item name="colorOnSurface">@color/white_2</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="colorOnPrimaryContainer">@color/white_2</item>
        <item name="colorTertiaryContainer">@color/white_1</item>
        <item name="colorOnTertiaryContainer">@color/black_2</item>
        <item name="colorOutline">@color/white_3</item>
        <item name="colorOutlineVariant">@color/white_3</item>
        <item name="toolbarStyle">@style/Toolbar</item>
        <item name="bottomNavigationStyle">@style/BottomNavigationView</item>
        <item name="colorSecondaryContainer">@color/purple_2</item>
        <item name="colorOnSurfaceVariant">@color/white_2</item>
        <item name="colorOnSecondaryContainer">@color/white_2</item>
    </style>

    <style name="Toolbar" parent="Widget.Material3.Toolbar">
        <item name="titleTextColor">?attr/colorOnPrimary</item>
        <item name="titleTextAppearance">@style/DisplayTextAppearance</item>
        <item name="android:background">?attr/colorSurface</item>
        <item name="android:textColorPrimary">?attr/colorOnSurfaceVariant</item>
    </style>
</resources>